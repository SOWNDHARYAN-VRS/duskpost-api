{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/duskpost-api/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "apps/duskpost-api/tsconfig.app.json"
  },
  "monorepo": true,
  "root": "apps/duskpost-api",
  "projects": {
    "duskpost-api": {
      "type": "application",
      "root": "apps/duskpost-api",
      "entryFile": "main",
      "sourceRoot": "apps/duskpost-api/src",
      "compilerOptions": {
        "tsConfigPath": "apps/duskpost-api/tsconfig.app.json"
      }
    },
    "core": {
      "type": "library",
      "root": "libs/core",
      "entryFile": "index",
      "sourceRoot": "libs/core/src",
      "compilerOptions": {
        "tsConfigPath": "libs/core/tsconfig.lib.json"
      }
    },
    "shared": {
      "type": "library",
      "root": "libs/shared",
      "entryFile": "index",
      "sourceRoot": "libs/shared/src",
      "compilerOptions": {
        "tsConfigPath": "libs/shared/tsconfig.lib.json"
      }
    }
  },
  "generateOptions": {
    "spec": false
  }
}